<div class="row">
      <div class="col-md-7 mx-auto mt-5">

          <div class="card shadow-lg">
              <div class="card-body">
                  <div class="box">
                      <h2 class="text-primary">Registrar usuario</h2>
                      <%= simple_form_for @user do |f| %>

                      <h4>Datos Personales</h4>
                      <div class="row">
                          <div class="col"><%= f.input :identificacion %></div>
                          <div class="col"><%= f.input :nombres%></div>
                          <div class="col"><%= f.input :apellidos%></div>
                      </div>

                      <h4>Informaci√≥n de contacto</h4>
                      <div class="row">
                          <div class="col"><%= f.input :telefono %></div>
                          <div class="col"><%= f.input :direccion %></div>
                      </div>

                      <%= f.input :email %>

                      <div class="row">
                          <div class="col"><%= f.input :password %></div>
                          <div class="col"><%= f.input :password_confirmation %></div>
                      </div>

                      <%= f.button :submit, class: "btn btn-primary" %>
                      <% end %>
                  </div>
              </div>
          </div>
      </div>
  </div>